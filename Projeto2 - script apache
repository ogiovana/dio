mkidr /scripts2/
nano script-iac2.sh

#!/bin/bash

echo "Atualizando o servidor..."

apt-get update 
apt-get upgrade -y
apt-get install apache2 -y
apt-get install unzip -y

echo "Baixando e atualizando os arquivos da aplicação..."
ch /tmp
wget 
unzip
main.zip
cd linux-site-dio-main
cp -R * /var/www/html/

chmod +x script-iac2.sh

ls -l
